include <stdio.h>
#include <stdlib.h>

int main() {
    int *ptr;
    ptr = (int*) malloc(3 * sizeof(int));  // allocate memory for 3 integers

    // assign values
    ptr[0] = 10;
    ptr[1] = 20;
    ptr[2] = 30;

    // print values
    printf("Using malloc:\n");
    for (int i = 0; i < 3; i++) {
        printf("%d ", ptr[i]);
    }

    free(ptr);  // free allocated memory
    return 0;
}
